    "# define our start and end years\n",
    "start = 2015\n",
    "end = 2019\n",
    "\n",
    "years = ee.List.sequence(start, end)\n",
    "\n",
    "print(f\"our list has {years.size().getInfo()} years in it\")"
   ]
